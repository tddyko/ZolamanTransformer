<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" >
  	<ViewFlipper android:id="@+id/vf_main"  android:layout_width="fill_parent" android:layout_height="fill_parent">
		<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/rl_cartoonview" android:background="@color/white">
	  		<com.strastar.zolaman.classlist.CurlView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/curl"/>
	  		<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/zoomView" android:background="@color/white"/>

			<LinearLayout
			    android:id="@+id/ll_header"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/img_bar_top"
			    android:gravity="center_vertical"
			    android:paddingBottom="5dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="5dp" >

			    <Button
			        android:id="@+id/btn_cancel"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:background="@drawable/button_background_blue"
			        android:paddingBottom="8dp"
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp"
			        android:paddingTop="8dp"
			        android:text="Done"
			        android:textColor="@color/white"
			        android:textSize="11dp"
			        android:textStyle="bold" >
</Button>
				<TextView android:text="졸라맨 건즈" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textColor="@color/white" android:textStyle="bold" android:id="@+id/tv_title" android:textSize="19dp" android:ellipsize="end" android:lines="1"></TextView>

				<Button
				    android:id="@+id/btn_bookmark"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:background="@drawable/button_background"
				    android:paddingBottom="8dp"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingTop="8dp"
				    android:text="북마크"
				    android:textColor="@color/white"
				    android:textSize="11dp" >
</Button>
			</LinearLayout>
			<LinearLayout android:id="@+id/ll_footer" android:layout_width="fill_parent" android:gravity="center" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:background="@drawable/img_bar_bot">
				<TextView android:id="@+id/tv_start" android:layout_height="wrap_content" android:textColor="@color/white" android:layout_width="30dp" android:gravity="right" android:textStyle="bold" android:text="1"></TextView>
			  	<LinearLayout android:paddingLeft="5dp" android:paddingRight="5dp" android:gravity="center_vertical" android:layout_width="200dp" android:layout_height="40dp">
				 	<SeekBar android:id="@+id/sb_currentpage" android:paddingLeft="10dp" android:paddingRight="10dp" 
							 android:progressDrawable="@drawable/seekbar_progress" android:secondaryProgress="0" android:thumb="@drawable/progress_controler" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxHeight="10px"/>
				</LinearLayout>
				<TextView android:text="190" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/white" android:textStyle="bold" android:id="@+id/tv_end"></TextView>
			</LinearLayout>
			<FrameLayout android:id="@+id/fl_preview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:padding="3dp">
				<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
					<LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:background="@drawable/area" android:layout_height="fill_parent"/>
					<LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_height="fill_parent" android:background="@drawable/area"/>
					<LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent" android:background="@drawable/area"/>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingTop="140dp">
					<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginRight="3dp" android:padding="3dp">
						<TextView android:id="@+id/tv_prev" android:background="@drawable/say" android:text="이전페이지" android:textColor="@color/black" android:layout_width="fill_parent" android:textStyle="bold" android:layout_height="wrap_content" android:paddingTop="15dp" android:paddingBottom="15dp" android:gravity="center" android:textSize="14sp"/>
						<TextView  android:background="@drawable/say_pcik" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" />
						<TextView android:layout_height="wrap_content" android:text="prev" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:paddingTop="10dp" android:textStyle="bold" android:textSize="22dp"/>
					</LinearLayout>
					<LinearLayout android:layout_weight="1" android:orientation="vertical" android:gravity="center_horizontal" android:layout_height="wrap_content" android:padding="3dp" android:layout_width="fill_parent" android:layout_marginRight="3dp">
						<TextView android:id="@+id/tv_menu" android:background="@drawable/say" android:text="메뉴고르기" android:textColor="@color/black" android:layout_width="fill_parent" android:textStyle="bold" android:layout_height="wrap_content" android:paddingTop="15dp" android:paddingBottom="15dp" android:gravity="center" android:textSize="14sp"/>
						<TextView  android:background="@drawable/say_pcik" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" />
						<TextView android:layout_height="wrap_content" android:text="menu" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:paddingTop="10dp" android:textStyle="bold" android:textSize="22dp"/>
					</LinearLayout>
					<LinearLayout android:layout_weight="1" android:orientation="vertical" android:gravity="center_horizontal" android:layout_height="wrap_content" android:padding="3dp" android:layout_width="fill_parent" android:layout_marginLeft="3dp">
						<TextView android:id="@+id/tv_next" android:background="@drawable/say" android:text="다음페이지" android:textColor="@color/black" android:layout_width="fill_parent" android:textStyle="bold" android:layout_height="wrap_content" android:paddingTop="15dp" android:paddingBottom="15dp" android:gravity="center" android:textSize="14sp"/>
						<TextView  android:background="@drawable/say_pcik" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" />
						<TextView android:layout_height="wrap_content" android:text="next" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:paddingTop="10dp" android:textStyle="bold" android:textSize="22dp"/>
					</LinearLayout>
				</LinearLayout>
			</FrameLayout>
		</RelativeLayout>
		<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:id="@+id/ll_bookmarks">
		  	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">

			    <LinearLayout
			        android:id="@+id/ll_header"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/img_bar_top"
			        android:gravity="center_vertical"
			        android:paddingBottom="5dp"
			        android:paddingLeft="5dp"
			        android:paddingRight="5dp"
			        android:paddingTop="5dp" >

			    	<Button android:textColor="@color/white" android:layout_width="wrap_content" android:text="취소" android:layout_height="wrap_content" android:background="@drawable/button_background" android:paddingLeft="10dp" android:textSize="11dp" android:paddingRight="10dp" android:paddingBottom="8dp" android:paddingTop="8dp" android:id="@+id/btn_cancel2"></Button>
					<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:textColor="@color/white" android:textStyle="bold" android:id="@+id/tv_title" android:text="Bookmarks" android:textSize="19dp"></TextView>

					<Button
					    android:id="@+id/btn_add"
					    android:layout_width="wrap_content"
					    android:layout_height="fill_parent"
					    android:background="@drawable/button_background"
					    android:paddingBottom="2dp"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingTop="2dp"
					    android:text="+"
					    android:textColor="@color/white"
					    android:textSize="18dp"
					    android:textStyle="bold" >
</Button>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/white">
					<ListView android:layout_height="wrap_content" android:id="@+id/lv_bookmarks" android:layout_width="fill_parent" android:choiceMode="singleChoice" android:clickable="true" android:cacheColorHint="#00000000" android:divider="@color/lightgray" android:dividerHeight="1px" android:paddingBottom="1px" android:background="@color/lightgray"></ListView>
				</LinearLayout>
			</LinearLayout>
			
			<!--<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/pb_waiting" android:background="@drawable/custom_circular_progressbar"></ProgressBar>
		
		--></FrameLayout>
	</ViewFlipper>
</LinearLayout>
