<?xml version="1.0" encoding="utf-8"?>
 
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
         <shape>
            <corners android:radius="5dip" />
            <gradient 
                   android:startColor="#FFa8a8a8"
                   android:centerColor="#FFd0d0d0"
                   android:centerY="0.75"
                   android:endColor="#FFc9c9c9"
                   android:angle="270" /> 
            
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip> 
           <shape> 
               <corners 
                   android:radius="5dip" /> 
               <gradient
                    android:startColor="#ff5a7d9b"
                    android:centerColor="#ff6f9bc0"
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#ff6c96ba"             
               />
           </shape> 
       </clip>
    </item>
</layer-list>
